<Window x:Class="NinjaManager.View.InventoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Inventory, Source={StaticResource Locator}}"
        Title="Ninja Manager - Inventory" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{Binding List.Selected.Name, Mode=OneWay}"/>
    </Grid>
</Window>
