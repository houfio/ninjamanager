<Window x:Class="NinjaManager.View.NinjaList.AddNinjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaManager.View.NinjaList"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300"
        DataContext="{Binding AddNinja, Source={StaticResource Locator}}">
    
    <StackPanel>
        <TextBlock>Name:</TextBlock>
        <TextBox Text="{Binding NewNinja.Name}"></TextBox>
        <Button Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=AddWindow}">Save</Button>
    </StackPanel>
</Window>
